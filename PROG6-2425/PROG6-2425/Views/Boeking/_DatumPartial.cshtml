@model PROG6_2425.ViewModels.BoekingVM

<h2>Stap 1: Kies een datum</h2>

<form asp-action="BoekingWizard" method="post">
    <input type="hidden" asp-for="CurrentStep" value="1" />
    
    <div class="form-group">
        <label asp-for="Datum">Selecteer een datum:</label>
        <input asp-for="Datum" type="date" class="form-control" />
        <span asp-validation-for="Datum" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Verder</button>
</form>